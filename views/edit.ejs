<%- include('header') %>

    <div class="columns">
        <div class="column is-8 is-offset-2">
            <article class="media">
                <figure class="media-left">
                    <p class="image is-64x64">
                        <img src="/img/<%= user.avatar %>">
                    </p>
                </figure>

                <form class="media-content box" method="post" action="/posts/<%= post._id %>/edit">
                    <h2 class="title is-4">编辑文章</h2>

                    <div class="field">
                        <label class="label">标题 <span class="to-red" style="color: red;">*<sapn></label>
                        <p class="control">
                            <input class="input" type="text" name="title" value="<%= post.title %>">
                        </p>
                    </div>

                    <div class="field">
                        <label class="label">正文 <span class="to-red" style="color: red;">*<sapn></label>
                        <p class="control">
                            <textarea class="textarea" style="height: 350px;" name="content"><%= post.content %></textarea>
                        </p>
                    </div>

                    <div class="field is-grouped">
                        <p class="control">
                            <button class="button is-primary">修改</button>
                        </p>
                    </div>
                </form>
            </article>
        </div>
    </div>

<%- include('footer') %>